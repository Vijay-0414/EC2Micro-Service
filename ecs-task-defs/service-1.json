{
  "family": "service-1-task",
  "networkMode": "bridge",
  "requiresCompatibilities": [
    "EC2"
  ],
  "cpu": "256",
  "memory": "512",
  "containerDefinitions": [
    {
      "name": "service-1",
      "image": "123456789012.dkr.ecr.us-west-2.amazonaws.com/service-1:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8080,
          "hostPort": 8080,
          "protocol": "tcp"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/service-1",
          "awslogs-region": "us-west-2",
          "awslogs-stream-prefix": "service-1"
        }
      }
    }
  ]
}